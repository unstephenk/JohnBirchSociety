{
  "name": "john-birch-society-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev --workspace @jbs/api\" \"npm:dev --workspace @jbs/web\"",
    "build": "npm run build --workspace @jbs/api && npm run build --workspace @jbs/web",
    "start": "concurrently \"npm:start --workspace @jbs/api\" \"npm:start --workspace @jbs/web\""
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}

